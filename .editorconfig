; https://editorconfig.org/

root = true

[*]
insert_final_newline = true
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx,css,scss,less,html,htm}]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false
eclint_indent_style = unset

[*.nix]
indent_size = 2
